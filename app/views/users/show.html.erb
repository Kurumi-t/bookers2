<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if user.image.attached? %>
        <%= image_tag user.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><span>
              <%= user.name %>
            </span></th>
          </tr>
          <tr>
            <th>introduction</th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit/:id/user" href="/users/:id/edit">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <form action="/books" method="post">
        <%= form_with model: @book do |f| %>
        <div class="form group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form group">
          <h4>Opinion</h4>
            <%= f.text_area :body %>
        </div>
        <div class="form group">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
      </form>
    </div>
  </div>
</div>
