<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no-image', size: "100x100" %>
      <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th>
              <%= @user_name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
              <%= @user_introduction %>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit/:id/user" href="/users/:id/edit">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <form action="/books" method="post">
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div class="form group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form group">
          <h4>Opinion</h4>
            <%= f.text_area :body %>
        </div>
        <div class="form group">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
      </form>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= @books.each do |book| %>
          <tr>
            <td>
              <%=link_to user_path(book.id) do %>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.profile_image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no-image', size: "100x100" %>
                <% end %>
              <% end %>
            </td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
