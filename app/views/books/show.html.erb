<p id="notice"></p>
<div class="container">
  <div class="row">
    <%= render 'user_info', user: @user, book: @book %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%=link_to user_path(book.id) do %>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.profile_image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no-image', size: "100x100" %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%=link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>