<p id="notice"></p>
<div class="container">
  <div class="row">
    <%= render 'user_info', user: @user, book: @book %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%=link_to user_path(@book.id) do %>
                <% if @book.user.profile_image.attached? %>
                  <%= image_tag @book.user.profile_image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no-image', size: "100x100" %>
                <% end %>
                <br><%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%=link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <span class="btn btn-sm btn-success">
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id) %>
                <% end %>
              </span>
            </td>
            <td>
              <span class="btn btn-sm btn-danger">
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", books_path, method: :delete %>
                <% end %>
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>