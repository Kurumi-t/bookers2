<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"" %>
        </div>
        <div class="form group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, autofocus: true, id:"book_body"%>
        </div>
        <div class="form group">
          <%= f.submit 'Update Book' %>
        </div>
      <% end %>
      <%=link_to book_path(@book.id) do %>Show<% end %>
      |
      <%=link_to books_path do %>Back<% end %>
    </div>
  </div>
</div>